<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/black">

    <!-- Texto con la cantidad de asientos disponibles -->
    <TextView
        android:id="@+id/tvSeatsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 seats available"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Fila 1 de asientos -->
    <RadioGroup
        android:id="@+id/seatRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/seat1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:button="@drawable/radio_selectable"/>
    </RadioGroup>

    <!-- Fila 2 de asientos -->
    <RadioGroup
        android:id="@+id/seatRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/seat4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6" android:button="@drawable/radio_selectable"/>
    </RadioGroup>

    <!-- Fila 3 de asientos -->
    <RadioGroup
        android:id="@+id/seatRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/seat7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8" android:button="@drawable/radio_selectable"/>
        <RadioButton android:id="@+id/seat9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9" android:button="@drawable/radio_selectable"/>
    </RadioGroup>

    <!-- Botón para confirmar la selección de asientos -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@android:color/black"/>
</LinearLayout>
